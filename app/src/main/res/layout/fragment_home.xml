<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/home_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/logo_icon_dark" />

        </RelativeLayout>

<!--        <EditText-->
<!--            android:id="@+id/searchBar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="52dp"-->
<!--            android:layout_margin="16dp"-->
<!--            android:background="@drawable/edit_text_background"-->
<!--            android:fontFamily="@font/open_sans_medium"-->
<!--            android:hint="search pizza, burger, etc."-->
<!--            android:inputType="text"-->
<!--            android:maxLength="24"-->
<!--            android:maxLines="1"-->
<!--            android:padding="12dp"-->
<!--            android:textColorHint="@color/lightGrey"-->
<!--            android:textCursorDrawable="@drawable/cursor_line"-->
<!--            android:textSize="18sp"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/home_navigation_bar" />-->

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/heading_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="24dp"
            app:dividerColor="@color/lightestGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_navigation_bar" />

        <TextView
            android:id="@+id/categories_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="12dp"
            android:text="CATEGORIES"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/heading_divider"
            app:layout_constraintEnd_toEndOf="@+id/heading_divider"
            app:layout_constraintStart_toStartOf="@+id/heading_divider"
            app:layout_constraintTop_toTopOf="@+id/heading_divider" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categories_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:paddingStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/heading_divider" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categories_list" />


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/restaurant_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="24dp"
            android:background="@color/lightGrey"
            app:dividerColor="@color/lightestGrey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewPager" />

        <TextView
            android:id="@+id/restaurant_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="RESTAURANTS"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/restaurant_divider"
            app:layout_constraintEnd_toEndOf="@+id/restaurant_divider"
            app:layout_constraintStart_toStartOf="@+id/restaurant_divider"
            app:layout_constraintTop_toTopOf="@+id/restaurant_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_divider">

            <LinearLayout
                android:id="@+id/restaurant_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/restaurant_first"
                    app:shapeAppearance="@style/RoundedImage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rating_background"
                        android:drawableEnd="@drawable/star"
                        android:drawablePadding="4dp"
                        android:drawableTint="@color/white"
                        android:fontFamily="@font/open_sans_bold"
                        android:includeFontPadding="false"
                        android:padding="2dp"
                        android:text="4.6"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/open_sans_medium"
                        android:text="Dining"
                        android:textColor="@color/darkGrey"
                        android:textSize="14sp" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="mamura restaurant"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/open_sans_medium"
                    android:text="Pizza, burger, fries, etc."
                    android:textColor="@color/darkGrey"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/restaurant_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/restaurant_second"
                    app:shapeAppearance="@style/RoundedImage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/product_rating"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rating_background"
                        android:drawableEnd="@drawable/star"
                        android:drawablePadding="4dp"
                        android:drawableTint="@color/white"
                        android:fontFamily="@font/open_sans_bold"
                        android:includeFontPadding="false"

                        android:padding="2dp"
                        android:text="4.6"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/open_sans_medium"
                        android:text="Dining"
                        android:textColor="@color/darkGrey"
                        android:textSize="14sp" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="mamura restaurant"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/open_sans_medium"
                    android:text="Pizza, burger, fries, etc."
                    android:textColor="@color/darkGrey"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

