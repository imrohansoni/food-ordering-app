<?xml version="1.0" encoding="utf-8"?>

<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/lightestGrey"/>
            <stroke android:color="@color/lightGrey" android:width="1.2dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:color="@color/black" android:width="1.2dp"/>
        </shape>
    </item>


    <item android:state_focused="false">
        <shape
            android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:color="@color/mediumGrey" android:width="1.2dp"/>
        </shape>
    </item>
</selector>

