<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodOrderingApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.activities.ConfirmationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.OrderActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/WhiteStatusBarTheme"
            />
        <activity
            android:name=".ui.activities.ProductActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/WhiteStatusBarTheme"/>
        <activity
            android:name=".ui.activities.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.UpdateMobileVerifyCodeActivity"
            android:exported="false"
            android:theme="@style/WhiteStatusBarTheme" />
        <activity
            android:name=".ui.activities.UpdateMobileNumberActivity"
            android:exported="false"
            android:theme="@style/WhiteStatusBarTheme" />
        <activity
            android:name=".ui.activities.TermsAndConditionsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.PrivacyPolicyActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/WhiteStatusBarTheme"/>
        <activity
            android:name=".ui.activities.UpdateEmailActivity"
            android:exported="false"
            android:label="@string/title_activity_update_email"
            android:theme="@style/WhiteStatusBarTheme" />
        <activity
            android:name=".ui.activities.UpdateNameActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.CartActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/WhiteStatusBarTheme"/>
        <activity
            android:name=".ui.activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.NoInternet"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/WhiteStatusBarTheme" />
        <activity
            android:name=".ui.activities.LocationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/WhiteStatusBarTheme" />
        <activity
            android:name=".ui.activities.VerifyCodeActivity"
            android:exported="false"
            android:label="Verify code"
            android:screenOrientation="portrait"
            android:theme="@style/WhiteStatusBarTheme"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="false"
            android:theme="@style/WhiteStatusBarTheme" />
    </application>

</manifest>